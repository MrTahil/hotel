<Window x:Class="RoomListApp.LoginWindow"
	        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	        Title="Admin Bejelentkezés" Height="600" Width="400"
	        WindowStyle="None" 
	        AllowsTransparency="True"
	        Background="Transparent">

    <Border Background="#FFFFFF" 
	            CornerRadius="16"
	            Padding="32"
	            Effect="{DynamicResource MaterialShadowDepth3}"
            >

        <StackPanel>
            <Border Width="64" 
	                    Height="64" 
	                    Background="#E6F0FF"
	                    CornerRadius="12" 
	                    Margin="0,0,0,32">
                <Path Data="M12,1L3,5v6c0,5.55,3.84,10.74,9,12c5.16-1.26,9-6.45,9-12V5L12,1z M12,11.99h7c-0.53,4.12-3.28,7.79-7,8.94V12H5V6.3l7-3.11v8.8z" 
	                      Fill="#3B82F6"
	                      Width="32"
	                      Height="32"/>
            </Border>

            <TextBlock Text="Admin Bejelentkezés"
	                       FontSize="24"
	                       FontWeight="Bold"
	                       TextAlignment="Center">
                <TextBlock.Foreground>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#2563EB" Offset="0"/>
                        <GradientStop Color="#60A5FA" Offset="1"/>
                    </LinearGradientBrush>
                </TextBlock.Foreground>
            </TextBlock>

            <TextBlock Text="Jelentkezz be a folytatáshoz"
	                       Foreground="#6B7280"
	                       FontSize="14"
	                       TextAlignment="Center"
	                       Margin="0,8,0,32"/>

            <Border Background="#F8FAFC"
	                    BorderBrush="#E5E7EB"
	                    BorderThickness="1"
	                    CornerRadius="12"
	                    Margin="0,0,0,24">
                <Grid Margin="12">
                    <Path Data="M12,4A4,4 0 0,1 16,8A4,4 0 0,1 12,12A4,4 0 0,1 8,8A4,4 0 0,1 12,4M12,14C16.42,14 20,15.79 20,18V20H4V18C4,15.79 7.58,14 12,14Z"
	                          Fill="#9CA3AF"
	                          Width="20"
	                          Height="20"
	                          HorizontalAlignment="Left"/>
                    <TextBox x:Name="txtUsername"
                        BorderThickness="0"
	                             Background="Transparent"
	                             Margin="32,0,0,0"
	                             Padding="4"
	                             FontSize="14"
	                             />
                </Grid>
            </Border>

            <Border Background="#F8FAFC"
	                    BorderBrush="#E5E7EB"
	                    BorderThickness="1"
	                    CornerRadius="12"
	                    Margin="0,0,0,24">
                <Grid Margin="12">
                    <Path Data="M12,17A2,2 0 0,0 14,15C14,13.89 13.1,13 12,13A2,2 0 0,0 10,15A2,2 0 0,0 12,17M18,8A2,2 0 0,1 20,10V20A2,2 0 0,1 18,22H6A2,2 0 0,1 4,20V10C4,8.89 4.9,8 6,8H7V6A5,5 0 0,1 12,1A5,5 0 0,1 17,6V8H18M12,3A3,3 0 0,0 9,6V8H15V6A3,3 0 0,0 12,3Z"
	                          Fill="#9CA3AF"
	                          Width="20"
	                          Height="20"
	                          HorizontalAlignment="Left"/>
                    <PasswordBox x:Name="txtPassword" 
                        BorderThickness="0"
	                                Background="Transparent"
	                                Margin="32,0,0,0"
	                                Padding="4"
	                                FontSize="14"
	                                />
                </Grid>
            </Border>

            <Grid Margin="0,0,0,24">
                <CheckBox x:Name="rememberMeCheckBox" 
					Content="Emlékezz rám"
					Foreground="#4B5563"
					FontSize="14"/>
                <TextBlock Text="Elfelejtett jelszó?"
	                           Foreground="#3B82F6"
	                           FontSize="14"
	                           HorizontalAlignment="Right"
	                           Cursor="Hand"/>
            </Grid>

            <Button x:Name="btnLogin"
						Content="Bejelentkezés"
						Height="48"
						FontSize="14"
						FontWeight="SemiBold"
						Foreground="White"
						Padding="10"
						BorderThickness="0" 
						Click="btnLogin_Click"
						IsDefault="True">
                <Button.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#2563EB" Offset="0"/>
                        <GradientStop Color="#60A5FA" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
        </StackPanel>
    </Border>
</Window>

