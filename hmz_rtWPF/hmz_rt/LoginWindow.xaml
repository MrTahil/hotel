<Window x:Class="RoomListApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bejelentkezés" Height="250" Width="400" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBlock Text="Felhasználónév:" VerticalAlignment="Top" Margin="50,30,0,0"/>
        <TextBox x:Name="txtUsername" Width="200" Height="25" VerticalAlignment="Top" Margin="150,30,0,0"/>

        <TextBlock Text="Jelszó:" VerticalAlignment="Top" Margin="50,70,0,0"/>
        <PasswordBox x:Name="txtPassword" Width="200" Height="25" VerticalAlignment="Top" Margin="150,70,0,0"/>

        <Button Content="Bejelentkezés" Width="100" Height="30" Click="btnLogin_Click" VerticalAlignment="Top" Margin="150,120,0,0"/>
    </Grid>
</Window>
