                                <StackPanel>
                                    <TextBlock Text="Kezdő dátum" FontWeight="SemiBold" FontSize="18" Margin="0,0,0,15"/>
                                    <DatePicker x:Name="StartDatePicker" Padding="15,12" FontSize="16"/>
                                </StackPanel>
                            </Border>

                            <!-- Befejező dátum -->
                            <Border Grid.Column="1" Grid.Row="1" Margin="0,0,30,30" BorderThickness="1" BorderBrush="#E2E8F0" CornerRadius="12" Padding="20">
                                <StackPanel>
                                    <TextBlock Text="Befejező dátum" FontWeight="SemiBold" FontSize="18" Margin="0,0,0,15"/>
                                    <DatePicker x:Name="EndDatePicker" Padding="15,12" FontSize="16"/>
                                </StackPanel>
                            </Border>

                            <!-- Státusz -->
                            <Border Grid.Column="2" Grid.Row="1" Margin="0,0,0,30" BorderThickness="1" BorderBrush="#E2E8F0" CornerRadius="12" Padding="20">
                                <StackPanel>
                                    <TextBlock Text="Státusz" FontWeight="SemiBold" FontSize="18" Margin="0,0,0,15"/>
