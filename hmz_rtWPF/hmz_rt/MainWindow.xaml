                                <Border Margin="0,0,0,20" BorderThickness="1" BorderBrush="#E2E8F0" CornerRadius="12" Padding="20">
                                    <StackPanel>
                                        <TextBlock Text="Vendég" FontWeight="SemiBold" FontSize="18" Margin="0,0,0,15"/>
