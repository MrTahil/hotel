<Window x:Class="RoomListApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Szobák listája" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <!-- Bal oldali lista -->
            <ColumnDefinition Width="3*"/>
            <!-- Jobb oldali részletek -->
        </Grid.ColumnDefinitions>

        <!-- Szobák listája -->
        <ListBox x:Name="lstRooms" SelectionChanged="lstRooms_SelectionChanged"
                 DisplayMemberPath="RoomNumber"
                 Grid.Column="0" Margin="10"/>

        <!-- Szoba részletek panel -->
        <StackPanel x:Name="DetailsPanel" Grid.Column="1" Margin="10">
            <TextBlock Text="Szoba részletei" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

            <TextBlock Text="Szobaszám:" FontWeight="Bold"/>
            <TextBlock Text="{Binding RoomNumber}" FontSize="16" Foreground="DarkBlue"/>

            <TextBlock Text="Típus:" FontWeight="Bold" Margin="0,5,0,0"/>
            <TextBlock Text="{Binding RoomType}"/>

            <TextBlock Text="Ár (Ft/éj):" FontWeight="Bold" Margin="0,5,0,0"/>
            <TextBlock Text="{Binding PricePerNight, StringFormat=N0}"/>

            <TextBlock Text="Kapacitás:" FontWeight="Bold" Margin="0,5,0,0"/>
            <TextBlock Text="{Binding Capacity}"/>

            <TextBlock Text="Állapot:" FontWeight="Bold" Margin="0,5,0,0"/>
            <TextBlock Text="{Binding Status}"/>

            <TextBlock Text="Leírás:" FontWeight="Bold" Margin="0,5,0,0"/>
            <TextBlock Text="{Binding Description}" TextWrapping="Wrap" MaxWidth="300"/>

            <TextBlock Text="Emelet:" FontWeight="Bold" Margin="0,5,0,0"/>
            <TextBlock Text="{Binding FloorNumber}"/>

            <TextBlock Text="Szolgáltatások:" FontWeight="Bold" Margin="0,5,0,0"/>
            <TextBlock Text="{Binding Amenities}" TextWrapping="Wrap" MaxWidth="300"/>
        </StackPanel>
    </Grid>
</Window>
