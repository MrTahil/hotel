                Visibility="Collapsed">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Fejléc -->
                            <TextBlock Grid.Row="0" 
                               Text="Foglalás szerkesztése" 
                               FontSize="28" 
                               FontWeight="SemiBold" 
                               Margin="0,0,0,30"/>

                            <!-- Űrlap mezők - kártyaszerűen -->
