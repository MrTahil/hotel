                        Content="Mentés" 
                        Margin="15,0" 
                        Padding="30,15" 
                        Background="#16A34A" 
                        Foreground="White" 
                        BorderThickness="0"
                        FontSize="18"
                        Click="SaveMaintenanceButton_Click">
                                    <Button.Resources>
                                        <Style TargetType="Border">
                                            <Setter Property="CornerRadius" Value="8"/>
                                        </Style>
                                    </Button.Resources>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>

                <!-- Karbantartási kérelmek listája -->
                <ListView x:Name="maintenanceListView" 
          Grid.Row="1" 
          Margin="40,0,40,40" 
          BorderThickness="1"
          BorderBrush="#E2E8F0"
          FontSize="16">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="ID" DisplayMemberBinding="{Binding MaintenanceId}" Width="80"/>
                            <GridViewColumn Header="Szoba" DisplayMemberBinding="{Binding RoomNumber}" Width="100"/>
                            <GridViewColumn Header="Probléma leírása" DisplayMemberBinding="{Binding Description}" Width="300"/>
                            <GridViewColumn Header="Karbantartás dátuma" DisplayMemberBinding="{Binding MaintenanceDate, StringFormat='{}{0:yyyy.MM.dd}'}" Width="150"/>
                            <GridViewColumn Header="Bejelentés dátuma" DisplayMemberBinding="{Binding DateReported, StringFormat='{}{0:yyyy.MM.dd}'}" Width="150"/>
                            <GridViewColumn Header="Státusz" DisplayMemberBinding="{Binding Status}" Width="120"/>
                            <GridViewColumn Header="Megoldva" DisplayMemberBinding="{Binding ResolutionDate, StringFormat='{}{0:yyyy.MM.dd}'}" Width="150"/>
                            <GridViewColumn Header="Költség" DisplayMemberBinding="{Binding Cost, StringFormat='{}{0:N0} Ft'}" Width="120"/>
                            <GridViewColumn Header="Jegyzetek" DisplayMemberBinding="{Binding Notes}" Width="200"/>
                        </GridView>
                    </ListView.View>
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                            <Setter Property="Padding" Value="10,8" />
                            <Setter Property="Height" Value="45" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Status}" Value="Resolved">
                                    <Setter Property="Background" Value="#DCFCE7" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Status}" Value="In Progress">
                                    <Setter Property="Background" Value="#FEF3C7" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Status}" Value="Not resolved yet">
                                    <Setter Property="Background" Value="#FEE2E2" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ListView.ItemContainerStyle>
                </ListView>
            </Grid>
        </Grid>
        <!-- Események konténer -->
        <Grid x:Name="eventsContainer" Grid.Row="1" Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Felső fejléc és menü -->
            <Grid Grid.Row="0" Background="#1E293B" Margin="0,0,0,25">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Vissza gomb -->
                <Button Grid.Column="0" 
        Content="⬅ Vissza" 
        HorizontalAlignment="Left" 
        Margin="30,20" 
        Padding="25,15" 
        Background="#CA8A04" 
        Foreground="White" 
        BorderThickness="0"
        FontSize="18"
        Click="EventsBackButton_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="8"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <!-- Cím -->
                <TextBlock Grid.Column="1" 
           Text="Események Kezelése" 
           VerticalAlignment="Center" 
           HorizontalAlignment="Center" 
           FontSize="32" 
           FontWeight="SemiBold" 
           Foreground="White"/>

                <!-- Műveleti gombok -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="30,20">
                    <Button x:Name="AddEventButton"
            Content="➕ Új esemény" 
            Margin="15,0" 
            Padding="25,15" 
            Background="#16A34A" 
            Foreground="White" 
            BorderThickness="0"
            FontSize="18"
            Click="AddEventButton_Click">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="8"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                    <Button x:Name="EditEventButton"
            Content="✏️ Szerkesztés" 
            Margin="15,0" 
            Padding="25,15" 
            Background="#2563EB" 
            Foreground="White" 
            BorderThickness="0"
            FontSize="18"
            Click="EditEventButton_Click">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="8"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                    <Button x:Name="DeleteEventButton"
            Content="🗑️ Törlés" 
            Margin="15,0" 
            Padding="25,15" 
            Background="#DC2626" 
            Foreground="White" 
            BorderThickness="0"
            FontSize="18"
            Click="DeleteEventButton_Click">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="8"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- Tartalom -->
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Esemény szerkesztő panel -->
                <Border x:Name="eventEditPanel" 
        Grid.Row="0" 
        Padding="40" 
        Margin="40,0,40,40" 
        Background="White" 
        CornerRadius="16" 
        BorderThickness="1"
        BorderBrush="#E2E8F0"
        Effect="{StaticResource BoxShadow}"
        Visibility="Collapsed">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Fejléc -->
                        <TextBlock Grid.Row="0" 
                   x:Name="eventEditTitle" 
                   Text="Új esemény" 
                   FontSize="28" 
                   FontWeight="SemiBold" 
                   Margin="0,0,0,30"/>

                        <!-- Űrlap tartalma -->
                        <Grid Grid.Row="1" Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Első sor - Alap adatok -->
                            <!-- Esemény neve -->
                            <Border Grid.Column="0" Grid.Row="0" Margin="0,0,30,30" BorderThickness="1" BorderBrush="#E2E8F0" CornerRadius="12" Padding="20">
                                <StackPanel>
                                    <TextBlock Text="Esemény neve" FontWeight="SemiBold" FontSize="18" Margin="0,0,0,15"/>
                                    <TextBox x:Name="EventNameTextBox" Padding="15,12" FontSize="16"/>
                                </StackPanel>
                            </Border>

                            <!-- Kapacitás -->
                            <Border Grid.Column="1" Grid.Row="0" Margin="0,0,30,30" BorderThickness="1" BorderBrush="#E2E8F0" CornerRadius="12" Padding="20">
                                <StackPanel>
                                    <TextBlock Text="Kapacitás (fő)" FontWeight="SemiBold" FontSize="18" Margin="0,0,0,15"/>
                                    <TextBox x:Name="CapacityTextBox" Padding="15,12" FontSize="16"/>
                                </StackPanel>
                            </Border>

                            <!-- Státusz -->
                            <Border Grid.Column="2" Grid.Row="0" Margin="0,0,0,30" BorderThickness="1" BorderBrush="#E2E8F0" CornerRadius="12" Padding="20">
                                <StackPanel>
                                    <TextBlock Text="Státusz" FontWeight="SemiBold" FontSize="18" Margin="0,0,0,15"/>
                                    <ComboBox x:Name="EventStatusComboBox" Padding="15,12" FontSize="16">
                                        <ComboBoxItem Content="Tervezett"/>
                                        <ComboBoxItem Content="Aktív"/>
                                        <ComboBoxItem Content="Lezárt"/>
                                        <ComboBoxItem Content="Elhalasztott"/>
                                        <ComboBoxItem Content="Törölt"/>
                                    </ComboBox>
                                </StackPanel>
                            </Border>

                            <!-- Második sor - Időpont és helyszín -->
                            <!-- Esemény dátuma -->
                            <Border Grid.Column="0" Grid.Row="1" Margin="0,0,30,30" BorderThickness="1" BorderBrush="#E2E8F0" CornerRadius="12" Padding="20">
                                <StackPanel>
                                    <TextBlock Text="Esemény dátuma" FontWeight="SemiBold" FontSize="18" Margin="0,0,0,15"/>
                                    <DatePicker x:Name="EventDatePicker" Padding="15,12" FontSize="16"/>
                                </StackPanel>
                            </Border>

                            <!-- Helyszín -->
                            <Border Grid.Column="1" Grid.Row="1" Margin="0,0,30,30" BorderThickness="1" BorderBrush="#E2E8F0" CornerRadius="12" Padding="20">
                                <StackPanel>
                                    <TextBlock Text="Helyszín" FontWeight="SemiBold" FontSize="18" Margin="0,0,0,15"/>
                                    <TextBox x:Name="LocationTextBox" Padding="15,12" FontSize="16"/>
                                </StackPanel>
                            </Border>

                            <!-- Ár -->
                            <Border Grid.Column="2" Grid.Row="1" Margin="0,0,0,30" BorderThickness="1" BorderBrush="#E2E8F0" CornerRadius="12" Padding="20">
                                <StackPanel>
                                    <TextBlock Text="Ár (Ft)" FontWeight="SemiBold" FontSize="18" Margin="0,0,0,15"/>
                                    <TextBox x:Name="PriceTextBox" Padding="15,12" FontSize="16"/>
                                </StackPanel>
                            </Border>

                            <!-- Harmadik sor - Leírás -->
                            <Border Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="2" Margin="0,0,0,30" BorderThickness="1" BorderBrush="#E2E8F0" CornerRadius="12" Padding="20">
                                <StackPanel>
                                    <TextBlock Text="Leírás" FontWeight="SemiBold" FontSize="18" Margin="0,0,0,15"/>
                                    <TextBox x:Name="EventDescriptionTextBox" TextWrapping="Wrap" Height="100" Padding="15,12" FontSize="16"/>
                                </StackPanel>
                            </Border>

                            <!-- Negyedik sor - További adatok -->
                            <!-- Szervező neve -->
                            <Border Grid.Column="0" Grid.Row="3" Margin="0,0,30,30" BorderThickness="1" BorderBrush="#E2E8F0" CornerRadius="12" Padding="20">
                                <StackPanel>
                                    <TextBlock Text="Szervező neve" FontWeight="SemiBold" FontSize="18" Margin="0,0,0,15"/>
                                    <TextBox x:Name="OrganizerNameTextBox" Padding="15,12" FontSize="16"/>
                                </StackPanel>
                            </Border>

                            <!-- Kapcsolattartási információ -->
                            <Border Grid.Column="1" Grid.Row="3" Margin="0,0,30,30" BorderThickness="1" BorderBrush="#E2E8F0" CornerRadius="12" Padding="20">
                                <StackPanel>
                                    <TextBlock Text="Kapcsolattartási információ" FontWeight="SemiBold" FontSize="18" Margin="0,0,0,15"/>
                                    <TextBox x:Name="ContactInfoTextBox" Padding="15,12" FontSize="16"/>
                                </StackPanel>
                            </Border>

                            <!-- Műveleti gombok -->
                            <StackPanel Grid.Column="2" Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom">
                                <Button x:Name="CancelEventEditButton"
                        Content="Mégse" 
                        Margin="15,0" 
                        Padding="30,15" 
                        Background="#6B7280" 
                        Foreground="White" 
                        BorderThickness="0"
                        FontSize="18"
                        Click="CancelEventEditButton_Click">
                                    <Button.Resources>
                                        <Style TargetType="Border">
                                            <Setter Property="CornerRadius" Value="8"/>
                                        </Style>
                                    </Button.Resources>
                                </Button>
                                <Button x:Name="SaveEventButton"
                        Content="Mentés" 
                        Margin="15,0" 
                        Padding="30,15" 
                        Background="#16A34A" 
                        Foreground="White" 
                        BorderThickness="0"
                        FontSize="18"
                        Click="SaveEventButton_Click">
                                    <Button.Resources>
                                        <Style TargetType="Border">
                                            <Setter Property="CornerRadius" Value="8"/>
                                        </Style>
                                    </Button.Resources>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>

                <!-- Események listája -->
                <ListView x:Name="eventsListView" 
          Grid.Row="1" 
          Margin="40,0,40,40" 
          BorderThickness="1"
          BorderBrush="#E2E8F0"
          FontSize="16">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="ID" DisplayMemberBinding="{Binding EventId}" Width="80"/>
                            <GridViewColumn Header="Esemény neve" DisplayMemberBinding="{Binding EventName}" Width="200"/>
                            <GridViewColumn Header="Helyszín" DisplayMemberBinding="{Binding Location}" Width="150"/>
                            <GridViewColumn Header="Dátum" DisplayMemberBinding="{Binding EventDate, StringFormat='{}{0:yyyy.MM.dd}'}" Width="130"/>
                            <GridViewColumn Header="Kapacitás" DisplayMemberBinding="{Binding Capacity}" Width="80"/>
                            <GridViewColumn Header="Ár" DisplayMemberBinding="{Binding Price, StringFormat='{}{0:N0} Ft'}" Width="100"/>
                            <GridViewColumn Header="Státusz" DisplayMemberBinding="{Binding Status}" Width="120"/>
                            <GridViewColumn Header="Szervező" DisplayMemberBinding="{Binding OrganizerName}" Width="150"/>
                            <GridViewColumn Header="Hozzáadva" DisplayMemberBinding="{Binding DateAdded, StringFormat='{}{0:yyyy.MM.dd}'}" Width="130"/>
                        </GridView>
                    </ListView.View>
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                            <Setter Property="Padding" Value="10,8" />
                            <Setter Property="Height" Value="45" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Status}" Value="Aktív">
                                    <Setter Property="Background" Value="#DCFCE7" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Status}" Value="Tervezett">
                                    <Setter Property="Background" Value="#F0F9FF" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Status}" Value="Lezárt">
                                    <Setter Property="Background" Value="#E0E7FF" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Status}" Value="Elhalasztott">
                                    <Setter Property="Background" Value="#FEF3C7" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Status}" Value="Törölt">
                                    <Setter Property="Background" Value="#FEE2E2" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ListView.ItemContainerStyle>
                </ListView>
            </Grid>
        </Grid>
    </Grid>
</Window>
