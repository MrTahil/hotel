                        <GridView>
                            <GridViewColumn Header="Vendég" DisplayMemberBinding="{Binding GuestName}" Width="Auto"/>
                            <GridViewColumn Header="Szoba" DisplayMemberBinding="{Binding RoomNumber}" Width="Auto"/>
