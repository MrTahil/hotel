                                    <TextBlock Text="Szoba ID" FontWeight="SemiBold" FontSize="18" Margin="0,0,0,15"/>
                                    <TextBox x:Name="RoomIdTextBox" Padding="15,12" FontSize="16"/>
                                </StackPanel>
                            </Border>

                            <!-- Második sor -->
                            <!-- Kezdő dátum -->
