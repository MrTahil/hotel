                                    <TextBlock Text="Kedvezmény (%)" FontWeight="SemiBold" FontSize="18" Margin="0,0,0,15"/>
                                    <TextBox x:Name="DiscountPercentageTextBox" Padding="15,12" FontSize="16"/>
                                </StackPanel>
                            </Border>

                            <!-- Szoba ID -->
                            <Border Grid.Column="2" Grid.Row="0" Margin="0,0,0,30" BorderThickness="1" BorderBrush="#E2E8F0" CornerRadius="12" Padding="20">
